package com.example.controller;

import org.apache.catalina.User;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import org.springframework.web.client.RestTemplate;
import com.example.dto.UserDTO;
@RestController
@RequestMapping("/api/orders")
class OrderController {

    @Autowired
    private RestTemplate restTemplate; // Tiêm RestTemplate đã cấu hình

    @GetMapping("/details/{userId}")
    public UserDTO getOrderDetails(@PathVariable Long userId) {
        System.out.println("Order Service: Yêu cầu thông tin User ID: " + userId);
        
        // 2. GỌI SERVICE KHÁC QUA TÊN EUREKA (lb://user-service)
        String userServiceUrl = "lb://user-service/api/users/" + userId;
        UserDTO user = restTemplate.getForObject(userServiceUrl, UserDTO.class);
        
        if (user != null) {
            return user;
        } else {
            return null;
        }
    }
}